<body>
    <h2>Add Game</h2>
  
    <form action="/games/new" method="POST">
      <label for="title">Title:</label>
      <input type="text" name="title" id="title" required /><br />
      <label for="thumbnail">Thumbnail URL:</label>
      <input type="text" name="thumbnail" id="thumbnail" required /><br />
  
      <label for="short_description">Short Description:</label>
      <textarea name="short_description" id="short_description" rows="5" required></textarea><br />
  
      <label for="description">Description:</label>
      <textarea name="description" id="description" rows="10" required></textarea><br />
  
      <label for="game_url">Game URL:</label>
      <input type="text" name="game_url" id="game_url" required /><br />
  
      <label for="genre">Genre:</label>
      <input type="text" name="genre" id="genre" required /><br />
  
      <label for="platform">Platform:</label>
      <input type="text" name="platform" id="platform" required /><br />
  
      <label for="publisher">Publisher:</label>
      <input type="text" name="publisher" id="publisher" required /><br />
  
      <label for="developer">Developer:</label>
      <input type="text" name="developer" id="developer" required /><br />
  
      <label for="release_date">Release Date:</label>
      <input type="date" name="release_date" id="release_date" required /><br />
  
      <label for="freetogame_profile_url">Free To Game Profile URL:</label>
      <input type="text" name="freetogame_profile_url" id="freetogame_profile_url" required /><br />
  
      <label for="minimum_system_requirements.os">Minimum System Requirements:</label><br />
      <label for="minimum_system_requirements.os">OS:</label>
      <input type="text" name="minimum_system_requirements[os]" id="minimum_system_requirements.os" required /><br />
  
      <label for="minimum_system_requirements.processor">Processor:</label>
      <input type="text" name="minimum_system_requirements[processor]" id="minimum_system_requirements.processor" required /><br />
  
      <label for="minimum_system_requirements.memory">Memory:</label>
      <input type="text" name="minimum_system_requirements[memory]" id="minimum_system_requirements.memory" required /><br />
  
      <label for="minimum_system_requirements.graphics">Graphics:</label>
      <input type="text" name="minimum_system_requirements[graphics]" id="minimum_system_requirements.graphics" required /><br />
  
      <label for="minimum_system_requirements.storage">Storage:</label>
      <input type="text" name="minimum_system_requirements[storage]" id="minimum_system_requirements.storage" required /><br />
  
      <button type="submit">Add Game</button>
    </form>
  </body>